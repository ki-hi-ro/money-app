<div class="main posts-index">
  <div class="container">
    <% @posts.each do |post| %>
      <div class="posts-index-item">
        <%= post.date %>
        <%= post.content %>
        <%= post.price %>
        <%= link_to '削除', "/posts/#{post.id}", data: { turbo_method: :delete } %> 
      </div>
    <% end %>
  </div>
</div>